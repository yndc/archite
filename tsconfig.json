{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "rootDirs": ["./src"],
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/lib",
    "target": "es5",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/lib",
    "noEmitOnError": true,
    "downlevelIteration": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
