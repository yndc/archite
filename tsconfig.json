{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src/",
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "rootDirs": ["./src"],
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "target": "es5",
    "removeComments": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
